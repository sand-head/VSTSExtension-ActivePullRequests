{
  "compilerOptions": {
    "charset": "utf8",
    "experimentalDecorators": true,
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strict": true,
    "target": "es6",
    "rootDir": "src/",
    "outDir": "dist/",
    "jsx": "react",
    "lib": ["es6", "dom", "es2016"],
    "types": ["react"],
    "esModuleInterop": true
  }
}
